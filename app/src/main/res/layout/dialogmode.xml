<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/modetxt"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Select Mode"
        android:textColor="@color/darktxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:layout_below="@+id/modetxt"
        android:id="@+id/rdgroup"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/silentrb"
            android:text="Silent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/vibraterb"
            android:layout_marginLeft="20dp"
            android:text="Vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <TextView
        android:id="@+id/cancletxt"
        android:text="CANCEL"
        android:layout_marginTop="5dp"
        android:textColor="@color/mailclr"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/oktxt"
        android:layout_marginRight="30dp"
        android:layout_below="@id/rdgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/oktxt"
        android:text="OK"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/mailclr"
        android:textStyle="bold"
        android:layout_below="@id/rdgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>