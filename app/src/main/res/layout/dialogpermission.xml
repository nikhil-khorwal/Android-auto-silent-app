<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/mailclr">
            <ImageView
                android:src="@drawable/ic_baseline_do_not_disturb_off_24"
                app:tint="@color/white"
                android:layout_width="50dp"
                android:layout_centerInParent="true"
                android:layout_height="50dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/down"
            android:layout_below="@id/top"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textAlignment="center"
                android:text="In order to work accurately this application requires ''DO NOT DISTURB'' permission."/>

            <TextView
                android:id="@+id/concancle"
                android:textSize="14dp"
                android:layout_toLeftOf="@id/conok"
                android:textColor="@color/mailclr"
                android:layout_alignParentBottom="true"
                android:text="NOT NOW"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="22dp"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/conok"
                android:textSize="14dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="22dp"
                android:textColor="@color/mailclr"
                android:text="Continue"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
</RelativeLayout>