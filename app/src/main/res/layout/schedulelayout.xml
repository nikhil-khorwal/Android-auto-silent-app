<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/maincard"
        android:background="@drawable/cardmain"
        android:layout_width="wrap_content"
        android:layout_height="100dp">
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/imageviewmain"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/silentt"
        android:scaleType="fitXY"
        android:layout_marginLeft="22dp"/>

    <TextView
        android:singleLine="true"
        android:id="@+id/setname"
        android:text="College"
        android:textColor="@color/darktxt"
        android:textSize="20dp"
        android:layout_marginTop="9.5dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/imageviewmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/staringtime"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/imageviewmain"
        android:textSize="12dp"
        android:text="Starting Time : 23:00 AM"
        android:layout_above="@id/endingtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginBottom="9.5dp"
        android:id="@+id/endingtime"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/imageviewmain"
        android:textSize="12dp"
        android:text="Ending Time   : 23:00 PM"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/onday"
        android:textSize="12dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imageviewmain"
        android:layout_above="@id/staringtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/alldays"
        android:layout_above="@id/staringtime"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/imageviewmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="7">

        <TextView
            android:id="@+id/day1"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="M"
            android:textColor="@color/lighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/day2"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="T"
            android:textColor="@color/lighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_marginLeft="10dp"
            android:id="@+id/day3"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="W"
            android:textColor="@color/lighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/day4"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="T"
            android:textColor="@color/lighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/day5"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="F"
            android:textColor="@color/lighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/day6"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="S"
            android:textColor="@color/lighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/day7"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="S"
            android:textColor="@color/lighttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <Switch
        android:id="@+id/setswitch"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_marginRight="23dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_below="@id/maincard"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:id="@+id/editschedule"
        android:layout_width="40dp"
        app:fabCustomSize="40dp"
        android:visibility="gone"
        android:src="@drawable/edit"
        app:tint="@color/white"
        app:backgroundTint="@color/mailclr"
        android:layout_height="40dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_below="@id/maincard"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:id="@+id/deleteschedule"
        android:layout_toRightOf="@id/editschedule"
        android:layout_width="40dp"
        app:fabCustomSize="40dp"
        android:visibility="gone"
        android:src="@drawable/delete"
        app:tint="@color/white"
        app:backgroundTint="@color/mailclr"
        android:layout_height="40dp"/>
</RelativeLayout>